        <!-- <<<<<<<<<< boilerplate <<<<<<<<<< -->
<% layout('/layouts/boilerplate.ejs') %> 

        <!-- ========== filters ========== -->
    <div id="filters">

        <!-- :::::::::: Tranding :::::::::: -->
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div> 
            <p>Tranding</p>
        </div>

        <!-- ########## Rooms ########## -->
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>

        <!-- ********** Iconic_Cities ********** -->
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Cities</p>
        </div>

        <!-- ---------- Mountains ---------- -->
        <div class="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </div>

        <!-- >>>>>>>>>> Castles >>>>>>>>>> -->
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>

        <!-- |||||||||| Amazing_Pools |||||||||| -->
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </div>

        <!-- ^^^^^^^^^^ Camping ^^^^^^^^^^ -->
        <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>

        <!-- .......... Farms .......... -->
        <div class="filter">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </div>

        <!-- <<<<<<<<<< Arctic <<<<<<<<<< -->
        <div class="filter">
            <div><i class="fa-regular fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>

        <!-- ========== total_tax ========== -->
        <div class="text-toggle">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total Texes</label>
              </div>
        </div>
    </div>

        <!-- :::::::::: cards :::::::::: -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3 border-bottom">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing_link">

                <!-- ########## image ########## -->
            <div class="card listing-card">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">

                <!-- ********** overlay ********** -->
                <div class="card-img-overlay"><i class="fa-solid fa-heart fa-beat"></i></div>

                <!-- ---------- card_bottom ---------- -->
                <div class="card-body">
                  <p class="card-text"><b><%= listing.title %></p></b> 
                                <p class="card-price">   &#8377; <%= listing.price.toLocaleString("en-IN") %> / day
                                     <i class="tax-info"> &nbsp; &nbsp; +18% GST</i></p>  
                </div>
              </div>
            </a>
              <% } %>
    </div>

    <!-- >>>>>>>>>> script >>>>>>>>>> -->
        <script>
            let texSwitch = document.getElementById("flexSwitchCheckDefault");
            texSwitch.addEventListener("click", () =>{
                let taxinfo = document.getElementsByClassName("tax-info");
                for(info of taxinfo){
                    if(info.style.display != "inline"){
                        info.style.display = "inline"
                    }else{
                        info.style.display = "none"
                    }
                }
            })
        </script>